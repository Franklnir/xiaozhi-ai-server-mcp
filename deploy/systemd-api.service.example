[Unit]
Description=SciG API (FastAPI)
After=network.target

[Service]
Type=simple
WorkingDirectory=/opt/scig_mode_mcp_fastapi
EnvironmentFile=/opt/scig_mode_mcp_fastapi/.env
ExecStart=/opt/scig_mode_mcp_fastapi/venv/bin/python -m uvicorn main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
